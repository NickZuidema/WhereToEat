<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/recs"
    >

    <TextView
        android:layout_width="334dp"
        android:layout_height="162dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="528dp"
        android:fontFamily="@font/rubik_bold"
        android:text="FOODIE STYLE"
        android:textColor="#019A5E"
        android:textSize="65sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="315dp"
        android:layout_marginBottom="404dp"
        android:fontFamily="@font/rubik_bold"
        android:text="Type"
        android:textColor="#242B28"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/textViewRate"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="301dp"
        android:layout_marginBottom="254dp"
        android:fontFamily="@font/rubik_bold"
        android:text="Rating"
        android:textColor="#242B28"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="316dp"
        android:layout_marginBottom="489dp"
        android:fontFamily="@font/rubik_bold"
        android:text="Price"
        android:textColor="#242B28"
        android:textSize="14sp" />

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="486dp"
        android:background="#5C5C5C" />

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="59dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="399dp"
        android:background="#5C5C5C" />

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="249dp"
        android:background="#5C5C5C" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupPrice"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="434dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.313">

        <com.google.android.material.chip.Chip
            android:id="@+id/price1"
            style="@style/CustomChip"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="₱"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />

        <com.google.android.material.chip.Chip
            android:id="@+id/price2"
            style="@style/CustomChip"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="₱₱"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />

        <com.google.android.material.chip.Chip
            android:id="@+id/price3"
            style="@style/CustomChip"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="₱₱₱"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />

    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupType"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="289dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.326"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.562">

        <com.google.android.material.chip.Chip
            android:id="@+id/type1"
            style="@style/CustomChip"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Eatery"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />

        <com.google.android.material.chip.Chip
            android:id="@+id/type2"
            style="@style/CustomChip"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:text="Fast Food"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />

        <com.google.android.material.chip.Chip
            android:id="@+id/type3"
            style="@style/CustomChip"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Café"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />

        <com.google.android.material.chip.Chip
            android:id="@+id/type4"
            style="@style/CustomChip"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Casual Dining"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />

        <com.google.android.material.chip.Chip
            android:id="@+id/type5"
            style="@style/CustomChip"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="Fine Dining"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />

    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupRate"
        android:layout_width="336dp"
        android:layout_height="99dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="148dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.313">

        <com.google.android.material.chip.Chip
            android:id="@+id/rate5"
            style="@style/CustomChip"

            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="5 ☆"
            android:textAlignment="center"

            tools:ignore="HardcodedText" />

        <com.google.android.material.chip.Chip
            android:id="@+id/rate4"
            style="@style/CustomChip"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="4 ☆"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />

        <com.google.android.material.chip.Chip
            android:id="@+id/rate3"
            style="@style/CustomChip"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="3 ☆"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />

        <com.google.android.material.chip.Chip
            android:id="@+id/rate2"
            style="@style/CustomChip"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="2 ☆"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />

        <com.google.android.material.chip.Chip
            android:id="@+id/rate1"
            style="@style/CustomChip"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="1 ☆"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />

    </com.google.android.material.chip.ChipGroup>

    <Button
        android:id="@+id/cont"
        android:layout_width="219dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="67dp"
        android:backgroundTint="#3DC08C"

        android:text="Continue" />
    <!--android:drawableRight="@drawable/baseline_arrow_circle_right_24"-->
</RelativeLayout>